    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
//        "module": "es6",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": ["src/main/typescript/*.ts"],
    "exclude": [
        "node_modules"
    ]
}
